    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
      	<link rel="shortcut icon" href="/resources/image/icon.png" />
		<link rel="apple-touch-icon" href="/resources/image/icon.png" />
		<!--[if lt IE 9]>
		<script src="/resources/js/html5shiv.js"></script>
		<![endif]-->
		
		<title>게시글 입력 화면</title>
		
		<script type="text/javascript" src="/resources/include/js/common.js"></script>
		<script type="text/javascript" src="/resources/include/js/jquery-1.12.4.min.js"></script>
		<script type="text/javascript">
			$(function(){
				$("#boardInsertBtn").click(function(){
					if(!chkData("#b_name", "작성자를"))return false;
					else if(!chkData("#b_title", "글 제목을 "))return false;
					else if(!chkData("#b_content", "글 내용을 "))return false;
					else if(!chkData("#b_pwd", "비밀번호를 "))return false;
					else{
						$("#f_writeForm").attr({
							method:"post",
							enctype:"multipart/form_data",//파일을 전송하기 위한 속성 추가
							action:"/board/boardInsert"
						});
						$("#f_writeForm").submit();
					}
				});
				$("#boardListBtn").click(function(){
					location.href="/board/boardList";
				});
				$("#resetBtn").click(function(){
					$("#f_writeForm").each(function(){
						this.reset();
					});
				});
			});
		</script>
	</head>
	<body>
		<div class="container">
		<h1>게시판 입력 화면</h1>
		<div class="form-group">
		<form id="f_writeForm" class="form-horizontal">
		<table class="table table-bordered">
				<tbody>
					<tr>
						<td class="text-center">작성자</td>
						<td colspan="3" class="text-left"><input type="text" id="b_name" name="b_name" maxlength="5" ></td>
					</tr>
					<tr>
						<td class="text-center">글 제목</td>
						<td colspan="3"><input type="text" class="form-control" name="b_title" id="b_title" maxlength="50"></td>
					</tr>
					<tr>
					<tr>
						<td class="text-center">글 내용</td>
						<td colspan="3"><textarea name="b_content" id="b_content" rows="8" class="form-control"></textarea></td>
					</tr>
					<tr>
						<td class="text-center">비밀번호</td>
						<td colspan="3"><input type="password" name="b_pwd" id="b_pwd" class="form-control" maxlength="15"></td>
					</tr>
					<tr>
						<td>파일 첨부</td>
						<td class="text-left"><input type="file" name="file" id="file" /></td>
						<!-- 파일을 처리하기 위해 MultipartFile이 필요하므로 b_file이 아닌 그냥 file을 아이디로 설정해주어야 한다. -->
					</tr>				
				</tbody>
			</table>
		</form>
			
				<div class="text-right">
				<input type="button" value="저장" id="boardInsertBtn" class="btn btn-default" />
				<input type="button" value="목록" id="boardListBtn" class="btn btn-default" />
				<input type="button" value="취소" id="resetBtn" class="btn btn-default"/>
				</div>
			
		</div>
		</div>
	</body>
</html>