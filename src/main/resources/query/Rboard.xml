<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.msix.client.rboard.dao.RboardDAO">
	<select id="rboardList" parameterType="rboard" resultType="rboard">
		SELECT r_no,r_title,r_content,
       	 		to_char(r_date,'YYYY-MM-DD HH24:MI:SS') as r_date
		 FROM  r_board
		 where q_no=#{q_no}
		 order by r_no desc
	</select>
	
	<delete id="rboardDelete" parameterType="int">
		delete from r_board where q_no=#{q_no}
	</delete>
</mapper>